<% include partials/header %>
    <div class="container">
      <div class="title">
        <h1>Shh! It's a party!</h1>
      </div>
      <div class="jumbotron">
        <input id="partyName" type="text" placeholder="Party name">
        <input id="partyMeta" type="text" placeholder="Description/genre for party">
        <button id="newParty">Start a new party</button>
        <% if (parties.length > 0) { %>
          <p>...or join an existing one:</p>
        <% } %>
        <ul>
          <% for (var party of parties) { %>
            <li>
              <a href="/party/<%= party.peerId %>" alt="<%= party.partyMeta %>" title="<%= party.partyMeta %>">
                <%= party.partyName %>
              </a>
              <%= party.partyMeta %>
            </li>
            <li>
              <a href="/party/<%= party.peerId %>">
                <%= party.partyName %>
              </a>
              <%= party.partyMeta %>
            </li>
          <% } %>
        </ul>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="http://cdn.peerjs.com/0.3/peer.min.js"></script>

    <script src="js/index.js"></script>
<% include partials/footer %>

